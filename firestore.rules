rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny for anything not explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper: only the authenticated owner can access their data.
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Allow owner access to the root user document: /users/{uid}
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Allow owner access to ALL descendants under /users/{uid}
    // Examples:
    //   /users/{uid}/servers/{serverId}
    //   /users/{uid}/media/{mediaId}
    //   /users/{uid}/playback/{mediaId}
    //   /users/{uid}/collections/{collectionId}
    //   /users/{uid}/servers_meta/{docId}
    match /users/{uid}/{document=**} {
      allow read, write: if isOwner(uid);
    }
  }
}
